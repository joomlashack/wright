<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 1.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/1.5/template-install.dtd">
<extension version="2.5" type="template" method="upgrade" client="site">
	<name>js_wright</name>
	<creationDate>January 2016</creationDate>
	<author>Joomlashack</author>
	<authorEmail>support@joomlashack.com</authorEmail>
	<authorUrl>http://www.joomlashack.com</authorUrl>
	<copyright>Copyright Joomlashack 2010-2016. All rights reserved</copyright>
	<license>GNU GPLv2</license>
	<version>2.6.15</version>
    <description>
			<![CDATA[
				<p>This is the js_wright template by <a href="http://www.joomlashack.com">Joomlashack</a></p>
			]]>
    </description>
	<files>
		<filename>component.php</filename>
		<filename>favicon.ico</filename>
		<filename>functions.php</filename>
		<filename>index.php</filename>
		<filename>params.ini</filename>
		<filename>template.php</filename>
		<filename>templateDetails.xml</filename>
		<filename>template_thumbnail.png</filename>
		<folder>css</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>js</folder>
		<folder>wright</folder>
	</files>
	<positions>
		<position>sidebar1</position>
		<position>sidebar2</position>
		<position>menu</position>
		<position>above-content</position>
		<position>below-content</position>
		<position>logo</position>
		<position>topmenu</position>
		<position>banner</position>
		<position>menu</position>
		<position>grid-top1</position>
		<position>grid-top2</position>
		<position>grid-top3</position>
		<position>grid-bottom1</position>
		<position>bottommenu</position>
		<position>debug</position>
	</positions>
	<config>
		<fields name="params" addfieldpath="/templates/js_wright/wright/parameters/joomla_2.5">
			<fieldset name="basic">
                <!-- Start of default Wright params -->
				<field name="helper" type="help" label="Need Help?" />
				<field name="rebrand" type="rebrand" default="no" label="Remove Branding" description="This setting removes the branding from the footer of the template." />
				<field name="style" type="styles" default="theme1" label="Style" description="Select which of the style variations you wish to use." />
				<field name="mootools" type="radio" default="1" label="Enable Mootools" description="Turn off Joomla core Mootools.js">
					<option value="0">NO</option>
					<option value="1">YES</option>
				</field>
				<field name="logo" type="logo" default="template" label="Logo Image" description="You can select your logo from the images directory after you upload the image." />
				<field name="logowidth" type="grid" default="4" label="Logo Width" description="Select the column width for the logo, the rest of the space will be given to the newsflash module, or if you set it to full width the module will dissapear" />
				<field name="body_font" type="typography" default="arial" label="Body Font" description="Select the default font face for the body" />
				<field name="header_font" type="typography" default="arial" label="Heading Font" description="Select the default font face for the headers" />
				<field name="columns" type="columns" default="sidebar1:3;main:6;sidebar2:3" sidebars="2" label="Columns" description="You can set the default widths and arrange the main columns. Any columns that are unused will just be hidden and the main column will be widened." />
				<field name="doctype" type="list" default="html5" label="Doctype" description="">
					<option value="html5">HTML5</option>
					<option value="xhtml1transitional">XHTML 1 Transitional</option>
					<option value="xhtml1strict">XHTML 1 Strict</option>
				</field>
                <!-- End of default Wright params -->
			</fieldset>
		</fields>
	</config>
</extension>
